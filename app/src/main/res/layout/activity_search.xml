<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern"
    tools:context="com.vaisbleh.user.reuvenvaisblehfinalproject.activities.SearchActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/myTool"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:padding="0dp"
        android:theme="?attr/actionBarTheme">

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/around_me_2" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/myTool"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:background="@color/cardview_light_background"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/editKeyword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/enter_keyword_not_necessary"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/btnSearchService"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/cardview_light_background"
            android:elevation="1dp"
            android:transitionName="search"
            app:srcCompat="@drawable/find_2" />


    </LinearLayout>

</RelativeLayout>
